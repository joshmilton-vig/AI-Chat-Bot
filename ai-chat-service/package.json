{
  "name": "ai-chat-service",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm,cjs --dts --out-dir dist --clean",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "build:all": "npm run build && cd frontend && npm ci && npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.1",
    "openai": "^4.58.1",
    "rate-limiter-flexible": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.14.11",
    "tsup": "^8.1.0",
    "tsx": "^4.15.7",
    "typescript": "^5.6.2"
  }
}
